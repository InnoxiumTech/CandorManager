<Window x:Class="CandorWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CandorWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="369*"/>
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Top" MaxHeight="40"/>
        <Grid VerticalAlignment="Top" Margin="0,738,0,0" Grid.Row="1"/>
        <Menu HorizontalAlignment="Center" Height="40" Margin="0,5,0,0" VerticalAlignment="Top" Width="1180" Grid.RowSpan="2">
            <MenuItem x:Name="First_Menu" HorizontalAlignment="Left" Width="100" Height="35">
                <MenuItem.Effect>
                    <DropShadowEffect/>
                </MenuItem.Effect>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
